{
    "name": "jiskefet-api",
    "version": "0.0.0",
    "description": "Bookkeeping API for A Large Ion Collider Experiment (ALICE).",
    "author": "Jiskefet Dev Team",
    "license": "GPL-3.0",
    "scripts": {
        "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
        "dev": "nodemon --exec 'ts-node -r dotenv/config src/main.ts' src/main.ts",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "nyc mocha",
        "showcoverage": "open ./coverage/index.html",
        "typeorm": "npx ts-node node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "@nestjs/common": "^5.1.0",
        "@nestjs/core": "^5.1.0",
        "@nestjs/jwt": "^0.2.0",
        "@nestjs/passport": "^5.1.0",
        "@nestjs/swagger": "^2.5.1",
        "@nestjs/typeorm": "^5.2.1",
        "class-transformer": "^0.1.9",
        "class-validator": "^0.9.1",
        "cookie-parser": "^1.4.3",
        "dotenv": "^6.1.0",
        "express": "^4.16.4",
        "mysql": "^2.16.0",
        "passport": "^0.4.0",
        "passport-cookie": "^1.0.6",
        "passport-http-bearer": "^1.0.1",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.12",
        "request-promise": "^4.2.2",
        "rxjs": "^6.2.2",
        "simple-oauth2": "^2.2.1",
        "typeorm": "^0.2.7",
        "typescript": "^3.0.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^5.1.0",
        "@types/chai": "^4.1.7",
        "@types/chai-http": "^3.0.5",
        "@types/express": "^4.16.0",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.7.1",
        "@types/request-promise": "^4.1.42",
        "@types/simple-oauth2": "^2.2.0",
        "@types/sinon": "^5.0.5",
        "@types/supertest": "^2.0.5",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-http": "^4.2.0",
        "codecov": "^3.1.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.3",
        "nyc": "^13.1.0",
        "rimraf": "^2.6.2",
        "sinon": "^7.1.0",
        "source-map-support": "^0.5.9",
        "supertest": "^3.1.0",
        "ts-loader": "^4.4.2",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.5.0",
        "tslint": "5.11.0",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-node-externals": "^1.7.2"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "exclude": [
            "src/entities/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    }
}
